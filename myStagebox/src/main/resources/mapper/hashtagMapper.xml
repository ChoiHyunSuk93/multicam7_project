<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="concert">
	
	
	<insert id="create" parameterType="hashtagVO">
		insert into concert values (null, #{title}, #{genre}, #{place})
	</insert>
	
	<delete id="del"  parameterType="int">
		delete from concert where no = #{no}
	</delete>
	
	<update id="up"  parameterType="hashtagVO">
		update concert set place = #{place} where no = #{no}
	</update>
	
	<select id = "one" parameterType="int" resultType="hashtagVO">
		select * from concert where no = #{no}
	</select>
	
	<select id = "all" resultType="hashtagVO">
		select * from concert
	</select>
	
</mapper>